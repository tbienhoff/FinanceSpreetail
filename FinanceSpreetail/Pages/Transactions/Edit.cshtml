@page
@model FinanceSpreetail.Pages.Transactions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Transaction</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaction.ID" />
            <div class="form-group">
                <label asp-for="Transaction.name" class="control-label">Name</label>
                <input asp-for="Transaction.name" class="form-control" />
                <span asp-validation-for="Transaction.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.amount" class="control-label">Amount</label>
                <input asp-for="Transaction.amount" class="form-control" />
                <span asp-validation-for="Transaction.amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.date" class="control-label">Date</label>
                <input asp-for="Transaction.date" class="form-control" />
                <span asp-validation-for="Transaction.date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
