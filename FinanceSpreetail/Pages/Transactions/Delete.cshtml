@page
@model FinanceSpreetail.Pages.Transactions.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Transaction</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Transaction.name)
        </dd>
        <dt>
            Amount
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Transaction.amount)
        </dd>
        <dt>
            Date
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Transaction.date)
        </dd>
        <dt>
            Category
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Transaction.category.name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Transaction.ID" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
